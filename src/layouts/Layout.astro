---
import MFooter from "@components/MFooter.astro";
import MNav from "@components/MNav.astro";
import FloatingSocial from "@components/FloatingSocial.astro";
import '../styles/globals.css';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Actor&family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,700&family=Inter:wght@500;900&family=Krub:ital,wght@1,500&family=Rubik:wght@500&family=Antonio:wght@700&family=Sansita+Swashed&display=swap"
      rel="stylesheet"
    />
    <link
      rel="preload"
      href="/fonts/BebasNeue-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <title>{title}</title>
  </head>
  <body>
    <MNav />
    <slot />
    <FloatingSocial />
    <MFooter />
  </body>
</html>
<style is:global>
  html {
    background-color: #000000;
  }
</style>
