---
import Icon from "astro-icon";
---

<nav>
  <div class="container mx-auto flex items-center justify-between">
    <a href="/" class="flex w-[32%] items-center justify-start">
      <img src="https://res.cloudinary.com/de5c9p8wb/image/upload/v1692713471/logorescue_ldz3cp.png" alt="Logo de la empresa">
    </a>
                
    <div class="lg:hidden mr-8">
      <button id="mobile-menu-button" class="text-red-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-10 sm:w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>   

    <ul class="hidden lg:flex space-x-[3vw]">
      <li><a href="/" class="text-white text-2xl hover:underline hover:text-red-500">Inicio</i></a></li>
      <li><a href="/procedimiento" class="text-white text-2xl hover:underline hover:text-red-500">Procedimientos</a></li>
      <li><a href="/galeria" class="text-white text-2xl hover:underline hover:text-red-500">Galería</a></li>
      <li><a href="/precios" class="text-white text-2xl hover:underline hover:text-red-500">Precios</a></li>
    </ul>
    
    <div class="lg:flex space-x-4 hidden mr-8 xl:mx-0">
      <a target="_blank" href="https://www.facebook.com/profile.php?id=100071543359421&mibextid=LQQJ4d" class="text-white flex items-center">
        <Icon
          name="mdi:facebook"
          class="w-6 h-6 lg:w-12 lg:h-12 p-1 bg-black rounded-full text-white"
        />
      </a>
      <a target="_blank" href="https://instagram.com/rescuesneaks" class="text-white flex items-center">
        <Icon
          name="mdi:instagram"
          class="w-6 h-6 lg:w-12 lg:h-12 p-1 bg-black rounded-full text-white"
        />
      </a>
    </div>      
  </div>
  
</nav>

<!-- Menú desplegable hamburguesa para dispositivos móviles -->
<div id="mobile-menu" class="hidden lg:hidden bg-black text-gray-500">
  <ul class="py-4 px-6 space-y-4">
    <li><a href="/" class="block text-lg hover:underline hover:text-red-500">Inicio</a></li>
    <li class="border-t border-red-500 pt-4"><a href="/procedimiento" class="block text-lg hover:underline hover:text-red-500">Procedimientos</a></li>
    <li class="border-t border-red-500 pt-4"><a href="/galeria" class="block text-lg hover:underline hover:text-red-500">Galería</a></li>
    <li class="border-t border-red-500 pt-4"><a href="/precios" class="block text-lg hover:underline hover:text-red-500">Precios</a></li>
    <li class="border-t border-red-500 pt-4"><a href="#" class="block text-lg hover:underline hover:text-red-500"></a></li>
  </ul>
</div>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>