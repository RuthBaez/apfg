<!-- Menú desplegable hamburguesa para dispositivos móviles -->
<div id="mobile-menu" class="hidden lg:hidden bg-black text-gray-500">
  <ul class="py-4 px-6 space-y-4">
    <li><a href="/" class="block text-lg hover:underline hover:text-red-500">Inicio</a></li>
    <li class="border-t border-red-500 pt-4"><a href="#nosotros" class="block text-lg hover:underline hover:text-red-500">Nosotros</a></li>
    <li class="border-t border-red-500 pt-4"><a href="#servicios" class="block text-lg hover:underline hover:text-red-500">Servicios</a></li>
    <li class="border-t border-red-500 pt-4"><a href="#contacto" class="block text-lg hover:underline hover:text-red-500">Contactos</a></li>
    <li class="border-t border-red-500 pt-4"><a href="#" class="block text-lg hover:underline hover:text-red-500"></a></li>
  </ul>
</div>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>