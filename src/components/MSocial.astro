---
import Icon from "astro-icon";
import Template from "./base/Template.astro";
---

<Template>
  <section
    class="p-8 bg-secondary sm:block lg:flex flex-col md:flex-row items-center"
  >
    <div
      class="flex items-center sm:space-x-6 md:space-x-4 sm:mx-auto justify-between mx-auto w-full"
    >
      <a
        target="_blank"
        href="https://www.facebook.com/profile.php?id=100071543359421&mibextid=LQQJ4d"
        class="w-1/5 rounded-2xl flex items-center w-auto p-3 text-red-500 bg-white transition-shadow duration-300 hover:bg-gray-200 hover:shadow-lg"
      >
        <Icon
          name="mdi:facebook"
          class="w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16"
        />
      </a>
      <a
        target="_blank"
        href="https://instagram.com/rescuesneaks"
        class="w-1/5 rounded-2xl flex items-center w-auto p-3 text-red-500 bg-white transition-shadow duration-300 hover:bg-gray-200 hover:shadow-lg"
      >
        <Icon
          name="mdi:instagram"
          class="w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16"
        />
      </a>
      <a
        target="_blank"
        href="https://c8.alamy.com/zoomses/9/87ec8327f84b4256a87a82a31558d5db/2cdh2rx.jpg"
        class="w-1/5 rounded-2xl flex items-center w-auto p-3 text-red-500 bg-white transition-shadow duration-300 hover:bg-gray-200 hover:shadow-lg"
      >
        <Icon
          name="mdi:twitter"
          class="w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16"
        />
      </a>
      <a
        target="_blank"
        href="https://wa.me/51984362980"
        class="w-1/5 rounded-2xl flex items-center w-auto p-3 text-red-500 bg-white transition-shadow duration-300 hover:bg-gray-200 hover:shadow-lg"
      >
        <Icon
          name="mdi:whatsapp"
          class="w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16"
        />
      </a>
      <a
        target="_blank"
        href="https://m.me/103737551698635"
        class="w-1/5 rounded-2xl flex items-center w-auto p-3 text-red-500 bg-white transition-shadow duration-300 hover:bg-gray-200 hover:shadow-lg"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 lg:w-16 lg:h-16"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M3 20l1.3 -3.9a9 8 0 1 1 3.4 2.9l-4.7 1"></path>
          <path d="M8 13l3 -2l2 2l3 -2"></path>
        </svg>
      </a>
    </div>
    <div class="text-center mx-auto mt-4 md:mt-0">
      <h2 class="mb-8 text-white text-4xl font-extrabold leading-9 font-sans ml-9">
        ¡Síguenos en nuestras redes sociales y chatea con nosotros!
      </h2>
      <button
        class="flex mx-auto bg-white border-2 border-black rounded-xl px-6 py-3 text-black bg-aliceblue font-extrabold"
        onclick="window.location.href='/precios#request'"
      >
        Solicita tu revisión &nbsp;
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-circle-chevron-right"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M11 9l3 3l-3 3"></path>
          <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0z"></path>
        </svg>
      </button>
    </div>
  </section>
</Template>

