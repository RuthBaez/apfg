<section>
  <div class="flex">
    <div class="hidden sm:block sm:w-[34%]">
      <img
        src="https://res.cloudinary.com/dkljgkuyy/image/upload/f_auto,q_auto/v1/astro-rescue/prices/eopddyf6laq1bb5pryhb"
        alt="franja"
      />
    </div>
    <div class="flex flex-col w-full sm:w-[66%] p-[3.8vw]">
      <div class="flex flex-col">
        <div class="w-[34%] mx-auto">
